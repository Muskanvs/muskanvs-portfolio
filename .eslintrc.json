{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended"
    ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "@next/next/no-html-link-for-pages": "off",
    "react/no-unknown-property": ["error", {
      "ignore": ["rotation", "position", "scale", "args", "attach", "attachArray", "attachObject", "count", "stride", "frustumCulled", "size", "sizeAttenuation", "depthWrite", "transparent", "color"]
    }]
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
